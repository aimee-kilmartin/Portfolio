---

import { Icon } from 'astro-icon/components';
import { db, eq, Links } from 'astro:db';

const { portfolioId } = Astro.props

const data = await db.select()
  .from(Links)
  .where(eq(Links.portfolioId, portfolioId));

---


    <div class="column-container">
      <p>Want to know more?</p>
<div class="text-light column-single">{data.map((link) => (
      <a href={link.url} class="unstyle-a">
        <button class="item-list flex-center link-button glow-border"> <Icon name= {link.logo}/> {link.title}</button>
      </a>
      ))}
  </div>
</div>

